pragma solidity ^0.8.0;












contract NblNftStake is Ownable, ReentrancyGuard, ERC721Holder {
    using SafeMath for uint256;
    using SafeERC20 for ERC20;

    struct MultiplyInfo {
        uint256 amount; 
        uint256 times; 
    }

    struct StakeInfo {
        uint256 nftTokenId;
        uint256 inscriptionId;
        uint256 nblStakeAmount;
        uint256 begin;
    }

    INblNft public nft;
    IInscriptionNft public inscription;
    ERC20 public nbl;
    IVault public vault;
    address public community;
    uint[] public slotprices;
    ERC20 public usdToken;

    mapping(address => StakeInfo[]) public userStakeInfo;
    mapping(address => uint) public userLastHarvestTime;

    uint[] public nftGradeHp;
    // uint[] public inscriptionQualityHp;
    uint[][3] public inscriptionQualityHp;
    MultiplyInfo[] public nblPowerMultiplies;
    MultiplyInfo[] public aheadDiscounts;
    uint[] public slotPowerMultiplies;

    event DepositNft(address indexed user, uint256 tokenid);
    event DepositInscription(address indexed user, uint256 tokenid);
    event DepositNbl(address indexed user, uint256 index, uint256 amount, uint256 newPower);
    event WithdrawNft(address indexed user, uint256 tokenid);
    event EmergencyWithdrawNft(address indexed user, uint256 tokenid);

    IStakeBook private stakebook;
    uint private harvestPeroid;

    constructor(INblNft _nft, IInscriptionNft _inscription, ERC20 _nbl, IStakeBook _stakebook) {
        nft = _nft;
        inscription = _inscription;
        nbl = _nbl;
        stakebook = _stakebook;
    }

    function putSetting(address _vault, address _community,  address utoken, uint[] memory sprices) public onlyOwner {
        vault = IVault(_vault);
        slotprices = sprices;
        usdToken = ERC20(utoken);
        community = _community;
    }

    function putDeps(IInscriptionNft _inscription, IStakeBook _stakebook) public onlyOwner {
        inscription = _inscription;
        stakebook = _stakebook;
    }

    function setHarvestPeroid(uint value) public onlyOwner {
        harvestPeroid = value;
    }

    function totalAmount() public view returns(uint) {
        return stakebook.totalAmount();
    }

    function powerOf(address _user) public view returns (uint256) {
        return stakebook.powerOf(_user);
    }

    function pendingAwards(address _user) public view returns (uint256) {
        return stakebook.pendingAwards(_user);
    }

    function setInscriptionHashpowers(uint[] memory star1_powers, uint[] memory star2_powers, uint[] memory star3_powers) public onlyOwner {
        delete inscriptionQualityHp;
        inscriptionQualityHp[0] = new uint[](star1_powers.length);
        inscriptionQualityHp[1] = new uint[](star2_powers.length);
        inscriptionQualityHp[2] = new uint[](star3_powers.length);

        for (uint i = 0; i < star1_powers.length; ++i) {
            inscriptionQualityHp[0][i] = star1_powers[i];
        }
        for (uint i = 0; i < star2_powers.length; ++i) {
            inscriptionQualityHp[1][i] = star2_powers[i];
        }
        for (uint i = 0; i < star3_powers.length; ++i) {
            inscriptionQualityHp[2][i] = star3_powers[i];
        }
    }

    function setNftHashpowers(uint[] memory powers) public onlyOwner {
        delete nftGradeHp;
        nftGradeHp = new uint[](powers.length);
        for (uint i = 0; i < powers.length; ++i) {
            nftGradeHp[i] = powers[i];
        }
    }

    function setSlotPowerMultiplies(uint[] memory powers) public onlyOwner {
        delete slotPowerMultiplies;
        slotPowerMultiplies = new uint[](powers.length);
        for (uint i = 0; i < powers.length; ++i) {
            slotPowerMultiplies[i] = powers[i];
        }
    }

    function setNblPowerMultiplies(uint[] memory nbls, uint[] memory multiplies) public onlyOwner {
        require(nbls.length == multiplies.length, "invalid arg");
        delete nblPowerMultiplies;
        for (uint i = 0; i < nbls.length; ++i) {
            nblPowerMultiplies.push(MultiplyInfo(nbls[i], multiplies[i]));
        }
    }

    function setAheadDiscounts(uint[] memory periods, uint[] memory discounts) public onlyOwner {
        require(periods.length == discounts.length, "invalid arg");
        delete aheadDiscounts;
        for (uint i = 0; i < periods.length; ++i) {
            aheadDiscounts.push(MultiplyInfo(periods[i], discounts[i]));
        }
    }

    function getNftPower(uint _tokenid) public view returns(uint) {
        if (_tokenid > 0) {
            uint grade = nft.nftGrades(_tokenid);
            return nftGradeHp[grade];
        } else {
            return 0;
        }
    }

    function getInscriptionPower(uint _tokenid) public view returns(uint) {
        if (_tokenid > 0) {
            uint quality = inscription.nftQualities(_tokenid);
            uint star = inscription.nftStars(_tokenid);
            return inscriptionQualityHp[star - 1][quality - 1];
        } else {
            return 0;
        }
    }

    function getNblPower(uint amount) public view returns(uint) {
        uint ret = 0;
        uint i = 0;
        for (; i < nblPowerMultiplies.length - 1; ++i) {
            if (amount >= nblPowerMultiplies[i].amount && amount < nblPowerMultiplies[i + 1].amount ) {
                ret = nblPowerMultiplies[i].times;
                break;
            }
        }

        if (i == nblPowerMultiplies.length - 1) {
            ret = nblPowerMultiplies[nblPowerMultiplies.length - 1].times;
        }

        if (ret < 100) {
            ret = 100;
        }

        return ret;
    }

    function userStakeNfts(address user) public view returns (uint) {
        StakeInfo[] memory stake = userStakeInfo[user];
        uint result = 0;
        for (uint i = 0; i < stake.length; ++i) {
            if (stake[i].nftTokenId > 0) {
                result++;
            }
        }

        return result;
    }

    function getSlotPower(address user, uint index) public view returns (uint) {
        StakeInfo[] memory stake = userStakeInfo[user];
        if (index >= stake.length) return 0;

        uint tokenid = stake[index].nftTokenId;
        uint power = getNftPower(tokenid);
        if (power > 0) {
            uint amount = stake[index].nblStakeAmount;
            power = SafeMath.mul(power, getNblPower(amount)) / 100;
        }

        uint inscriptionId = stake[index].inscriptionId;
        if (inscriptionId > 0) {
            uint inscriptionPower = getInscriptionPower(inscriptionId);
            if (inscriptionPower > 0) {
                power = SafeMath.mul(power, inscriptionPower) / 1000;
            }
        }

        return power;
    }

    function unlockSlot() public {
        StakeInfo[] storage stakes = userStakeInfo[msg.sender];
        require(stakes.length < 8, "no new slot available");

        uint index = stakes.length;
        uint price = slotprices[index];

        if (price > 0) {
            // usdToken.safeTransferFrom(msg.sender, address(vault), price);
            // vault.send(address(usdToken), price);
            usdToken.safeTransferFrom(msg.sender, 0x000000000000000000000000000000000000dEaD, price);
        }

        userStakeInfo[msg.sender].push(StakeInfo(0, 0, 0, block.timestamp));
    }

    function getAvailabeSlots(address user) public view returns (uint) {
        StakeInfo[] memory stakes = userStakeInfo[user];
        return stakes.length;
    }

    function calcAllSlotPowerFor(address user) public view returns (uint) {
        StakeInfo[] memory stakes = userStakeInfo[user];
        uint totalPower = 0;
        for (uint i = 0; i < stakes.length; ++i) {
            totalPower = SafeMath.add(totalPower, getSlotPower(user, i));
        }

        uint multiply = slotPowerMultiplies[stakes.length - 1];
        totalPower = SafeMath.mul(totalPower, multiply) / 100;

        return totalPower;
    }

    function depositNft(uint256 _tokenid, uint256 _index) public {
        StakeInfo[] storage stakes = userStakeInfo[msg.sender];
        require(_index <= stakes.length && _index < 8, "slot not available");
        require(stakes[_index].nftTokenId == 0, "already staked!");
        nft.safeTransferFrom(msg.sender, address(this), _tokenid);

        stakes[_index].nftTokenId = _tokenid;
        stakes[_index].nblStakeAmount = 0;
        stakes[_index].begin = block.timestamp;

        // uint power = getNftPower(_tokenid);
        // stakebook.deposit(msg.sender, power);
        stakebook.withdrawAll(msg.sender);
        uint power = calcAllSlotPowerFor(msg.sender);
        stakebook.deposit(msg.sender, power);
        emit DepositNft(msg.sender, _tokenid);
    }

    function depositInscription(uint256 _inscriptionId, uint256 _index) public {
        StakeInfo[] storage stakes = userStakeInfo[msg.sender];
        require(_index <= stakes.length && _index < 8, "slot not available");
        require(_index == 2 || _index == 5 || _index == 7, "slot is not allowed to stake inscription");
        require(stakes[_index].nftTokenId != 0, "no stake available!");
        require(stakes[_index].inscriptionId == 0, "already staked!");

        inscription.safeTransferFrom(msg.sender, address(this), _inscriptionId);
        stakes[_index].inscriptionId = _inscriptionId;

        stakebook.withdrawAll(msg.sender);
        uint power = calcAllSlotPowerFor(msg.sender);
        stakebook.deposit(msg.sender, power);
        emit DepositInscription(msg.sender, _inscriptionId);
    }

    function harvest() public {
        require(block.number >= SafeMath.add(userLastHarvestTime[msg.sender], harvestPeroid), "no frequent harvest");
        stakebook.harvest(msg.sender);
        userLastHarvestTime[msg.sender] = block.number;
    }

    function withdrawNft(uint256 _index) public {
        StakeInfo[] storage stakes = userStakeInfo[msg.sender];
        require(_index < stakes.length, "invalid stake index");

        uint tokenid = stakes[_index].nftTokenId;
        require(tokenid > 0, "no stake available");

        uint amount = stakes[_index].nblStakeAmount;
        uint power = getSlotPower(msg.sender, _index);

        nft.safeTransferFrom(address(this), msg.sender, tokenid);
        if (stakes[_index].inscriptionId > 0) {
            inscription.safeTransferFrom(address(this), msg.sender, stakes[_index].inscriptionId);
        }

        uint discount = calcDiscount(stakes[_index].begin, amount);
        nbl.safeTransfer(community, discount);
        nbl.safeTransfer(msg.sender, SafeMath.sub(amount, discount));

        uint multiply = slotPowerMultiplies[stakes.length - 1];
        power = SafeMath.mul(power, multiply) / 100;
        stakebook.withdraw(msg.sender, power);

        stakes[_index].nftTokenId = 0;
        stakes[_index].inscriptionId = 0;
        stakes[_index].nblStakeAmount = 0;
        stakes[_index].begin = 0;

        emit WithdrawNft(msg.sender, tokenid);
    }

    function calcDiscount(uint begin, uint amount) public view returns (uint) {
        require(begin > 0, "invalid arg");
        uint ret = 0;
        for (uint i = 0; i < aheadDiscounts.length; ++i) {
            if (block.timestamp < SafeMath.add(begin, aheadDiscounts[i].amount)) {
                ret = SafeMath.mul(amount, aheadDiscounts[i].times) / 1000;
                break;
            }
        }

        return ret;
    }

    function depositNbl(uint256 _index, uint256 _amount) public {
        require(_index >= 0 && _index <= 7, "invalid slot");
        require(_amount > 0, "invalid deposit");
        StakeInfo[] storage stakes = userStakeInfo[msg.sender];
        uint tokenid = stakes[_index].nftTokenId;
        require(tokenid != 0, "invalid stake");
        require(stakes[_index].nblStakeAmount == 0, "no dup stake");

        nbl.safeTransferFrom(msg.sender, address(this), _amount);

        uint multiply = slotPowerMultiplies[stakes.length - 1];
        uint existingPower = getSlotPower(msg.sender, _index);
        existingPower = SafeMath.mul(existingPower, multiply) / 100;
        stakebook.withdraw(msg.sender, existingPower);

        stakes[_index].nblStakeAmount = SafeMath.add(stakes[_index].nblStakeAmount, _amount);
        uint newPower = getSlotPower(msg.sender, _index);
        newPower = SafeMath.mul(newPower, multiply) / 100;
        stakebook.deposit(msg.sender, newPower);

        emit DepositNbl(msg.sender, _index, _amount, newPower);
    }

    function emergencyWithdraw() public {
        StakeInfo[] storage stakes = userStakeInfo[msg.sender];

        for (uint i = 0; i < stakes.length; ++i) {
            if (stakes[i].inscriptionId > 0) {
                inscription.safeTransferFrom(address(this), msg.sender, stakes[i].inscriptionId);
                stakes[i].inscriptionId = 0;
            }
            if (stakes[i].nftTokenId > 0) {
                nft.safeTransferFrom(address(this), msg.sender, stakes[i].nftTokenId);
                stakes[i].nftTokenId = 0;
            }

            if (stakes[i].nblStakeAmount > 0) {
                uint mybal = nbl.balanceOf(address(this));
                nbl.safeTransfer(msg.sender, mybal > stakes[i].nblStakeAmount ? stakes[i].nblStakeAmount : mybal);
                stakes[i].nblStakeAmount = 0;
            }
            stakes[i].begin = 0;
        }

        stakebook.emergencyWithdraw(msg.sender);
    }
}
