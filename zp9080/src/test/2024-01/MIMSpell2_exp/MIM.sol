contract StargateAddress {
    address public recipient;
    uint32 public target;
    IStargate public constant pool = IStargate(0x19cFCE47eD54a88614648DC3f19A5980097007dD);
    IERC20 public constant USDT = IERC20(0x94b008aA00579c1307B0EF2c499aD98a8ce58e58);

    function init(address recipient_, uint32 target_) public {
        require(recipient == address(0), "Already initialized");
        recipient = recipient;
        target = target;
        USDT.approve(address(pool), type(uint256).max);
    }   

    function bridge(uint256 amount, uint256 minOut) public payable {
        USDT.transferFrom(msg.sender, address(this), amount);
        IStargate.MessagingFee memory fee = IStargate.MessagingFee(msg.value, 0);
        IStargate.SendParam memory sendParam = IStargate.SendParam(uint32(target), bytes32(uint256(uint160(recipient))), amount, minOut, "", "", "");
        pool.send(sendParam, fee, address(this));
    }

    receive() external payable {}

}

contract Factory {

    address immutable public implementation;

    constructor(address implementation_) {
        implementation = implementation_;
    }

    function computeAddress(address recipient, uint32 target)
            public
            view
            returns (address)
        {
            target = 30110;
            bytes32 salt = keccak256(abi.encodePacked(recipient, target));
            return
                Create2.computeAddress(
                    salt,
                    keccak256(getContractCreationCode(implementation)),
                    address(this)
                );
        }

    function deploy(
            address recipient,
            uint32 target,
            uint256 amount,
            uint256 amountOut
        ) public payable {
            target = 30110;
            bytes32 salt = keccak256(abi.encodePacked(recipient, target));
            address minimalProxy = Create2.deploy(
                0,
                salt,
                getContractCreationCode(implementation)
            );
            StargateAddress(payable(minimalProxy)).init(recipient, target); 
            StargateAddress(payable(minimalProxy)).bridge{value: msg.value}(amount, amountOut);
        }

    function getContractCreationCode(address logic)
            internal
            pure
            returns (bytes memory)
        {
            bytes10 creation = 0x3d602d80600a3d3981f3;
            bytes10 prefix = 0x363d3d373d3d3d363d73;
            bytes20 targetBytes = bytes20(logic);
            bytes15 suffix = 0x5af43d82803e903d91602b57fd5bf3;
            return abi.encodePacked(creation, prefix, targetBytes, suffix);
        }
}
